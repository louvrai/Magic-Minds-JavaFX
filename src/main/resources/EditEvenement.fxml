<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" alignment="center" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.Professeur.EditEvenementController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Modifier l'événement" />

    <TextField fx:id="tfNom" promptText="Titre de l'événement" />
    <TextField fx:id="tfDescription" promptText="Description de l'événement" />
    <TextField fx:id="tfLocalisation" promptText="Localisation de l'événement" />
    <TextField fx:id="tfCategorie" promptText="Catégorie de l'événement" />
    <TextField fx:id="tfNbParticipant" promptText="Nombre de participants" />
    <TextField fx:id="tfDateDebut" promptText="Date de début (format: YYYY-MM-DD)" />
    <TextField fx:id="tfDateFin" promptText="Date de fin (format: YYYY-MM-DD)" />

    <Button text="Enregistrer" onAction="#modifierEvenement" />
</VBox>
